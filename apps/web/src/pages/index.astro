---
import { getCollection } from "astro:content";
import Layout from "../components/Layout.astro";

const posts = await getCollection("blog");
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);
---

<Layout title="Home">
  <h1 class="text-4xl font-semibold">Welcome to Cosmic Garden</h1>
  <p class="mt-4 text-lg text-zinc-400">A creative space for ideas to bloom.</p>

  <section class="mt-12">
    <h2 class="text-2xl font-semibold">Recent Posts</h2>
    <ul class="mt-6 space-y-4">
      {
        sortedPosts.map((post) => (
          <li>
            <a
              href={`/blog/${post.id}`}
              class="block p-4 rounded-lg bg-zinc-800 hover:bg-zinc-700 transition-colors"
            >
              <h3 class="text-xl font-medium text-purple-400">
                {post.data.title}
              </h3>
              <p class="mt-1 text-zinc-400">{post.data.description}</p>
              <time class="mt-2 block text-sm text-zinc-500">
                {new Date(post.data.date).toDateString().slice(4)}
              </time>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</Layout>
